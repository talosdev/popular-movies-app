<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.talosdev.movies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/popular_movies_app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.talosdev.movies.ui.activity.MainActivity"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.talosdev.movies.ui.activity.MovieDetailActivity"
            android:parentActivityName="com.talosdev.movies.ui.activity.MainActivity" >
        </activity>
        <activity
            android:name="com.talosdev.movies.ui.activity.PreferencesActivity"
            android:parentActivityName="com.talosdev.movies.ui.activity.MainActivity" >
        </activity>

        <provider
            android:name="com.talosdev.movies.provider.MoviesProvider"
            android:authorities="com.talosdev.movies" />
    </application>

</manifest>