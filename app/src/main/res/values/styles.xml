<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColor">@color/color4</item>
        <!-- options menu background -->
        <item name="android:itemBackground">@color/colorPrimaryDark</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" />

    <style name="AppTheme.PopupOverlay">
    </style>

    <style name="AppTheme.Toolbar">
    </style>


    <style name="cardHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/card_small_padding</item>
        <item name="android:background">@color/color3</item>
        <item name="android:textColor">@android:color/white</item>

    </style>


    <style name="cardHeaderMediumText" parent="@style/cardHeader">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="cardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/card_small_padding</item>
        <item name="android:paddingBottom">@dimen/card_small_padding</item>
        <item name="android:paddingLeft">@dimen/card_big_padding</item>
        <item name="android:paddingRight">@dimen/card_big_padding</item>
        <item name="android:background">@color/color4</item>
        <item name="android:textColor">@color/color1</item>
    </style>

    <style name="cardContentText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color1</item>
    </style>

    <style name="card" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_marginTop">@dimen/card_margin</item>
    </style>

    <style name="empty_list_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/color2</item>
    </style>
    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
-->

</resources>
